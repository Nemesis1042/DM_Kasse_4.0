<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:CashApp.ViewModels"
             x:Class="CashApp.Views.ProductTab">

    <Design.DataContext>
        <vm:ProductTabViewModel />
    </Design.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header with Actions -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="10" Margin="0,0,0,20">
            <TextBlock Text="Produktverwaltung" FontSize="24" FontWeight="Bold" VerticalAlignment="Center" />
            <Button Content="Neues Produkt" Command="{Binding NewProductCommand}" />
            <Button Content="Aktualisieren" Command="{Binding RefreshCommand}" />
        </StackPanel>

        <!-- Main Content -->
        <DataGrid Grid.Row="1"
                  Items="{Binding Products}"
                  SelectedItem="{Binding SelectedProduct}"
                  Height="500"
                  CanUserResizeColumns="True"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" />
                <DataGridTextColumn Header="Kategorie" Binding="{Binding Category}" Width="120" />
                <DataGridTextColumn Header="Preis" Binding="{Binding Price, StringFormat=C}" Width="100" />
                <DataGridTextColumn Header="MwSt %" Binding="{Binding TaxRate, StringFormat=F2}" Width="80" />
                <DataGridTextColumn Header="Pfand" Binding="{Binding DepositAmount, StringFormat=C}" Width="100" />
                <DataGridTextColumn Header="Lager" Binding="{Binding StockQuantity}" Width="80" />
                <DataGridTextColumn Header="Barcode" Binding="{Binding Barcode}" Width="120" />
                <DataGridTextColumn Header="Aktiv" Binding="{Binding IsActive}" Width="60" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
