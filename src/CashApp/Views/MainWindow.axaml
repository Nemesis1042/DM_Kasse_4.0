<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:CashApp.ViewModels"
        xmlns:views="using:CashApp.Views"
        x:Class="CashApp.Views.MainWindow"
        Title="Kassensystem"
        Width="1200"
        Height="800"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">
    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>
    <Grid RowDefinitions="*,Auto">
        <!--Main Content Area-->
        <TabControl Grid.Row="0" SelectedIndex="{Binding SelectedTabIndex}" Margin="5">
            <!--Kasse Tab-->
            <TabItem Header="Kasse">
                <views:CashTab />
            </TabItem>
            <!--Produkte Tab-->
            <TabItem Header="Produkte">
                <views:ProductTab />
            </TabItem>
            <!--Pfand Tab-->
            <TabItem Header="Pfand">
                <views:PfandTab />
            </TabItem>
            <!--Statistiken Tab-->
            <TabItem Header="Statistiken">
                <views:StatsTab />
            </TabItem>
            <!--Einstellungen Tab-->
            <TabItem Header="Einstellungen">
                <views:SettingsTab />
            </TabItem>
            <!--Benutzer Tab-->
            <TabItem Header="Benutzer" IsVisible="{Binding CanManageUsers}">
                <views:UserTab />
            </TabItem>
        </TabControl>
        <!--Status Bar-->
        <Border Grid.Row="1" BorderBrush="LightGray" BorderThickness="0,1,0,0" Background="#F5F5F5">
            <Grid ColumnDefinitions="*,*,*,Auto" Margin="10,5">
                <!--Status Message-->
                <TextBlock Grid.Column="0" Text="{Binding StatusMessage}" VerticalAlignment="Center" FontWeight="Bold" />
                <!--Current User Info-->
                <TextBlock Grid.Column="1" Text="{Binding CurrentUserInfo}" VerticalAlignment="Center" HorizontalAlignment="Center" />
                <!--Current Time-->
                <TextBlock Grid.Column="2" Text="{Binding CurrentTime}" VerticalAlignment="Center" HorizontalAlignment="Right" />
                <!--Test Mode Indicator-->
                <Border Grid.Column="3" Background="{Binding IsTestMode, Converter={StaticResource BoolToColorConverter}}" CornerRadius="3" Padding="5,2" Margin="10,0,0,0">
                    <TextBlock Text="TEST MODUS" Foreground="White" FontSize="10" FontWeight="Bold" HorizontalAlignment="Center" />
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
